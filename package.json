{
  "name": "@ethereum-starter/monorepo",
  "version": "1.0.0",
  "description": "Strong Ethereum starter",
  "main": "index.js",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/hardhat",
      "**/hardhat/**"
    ]
  },
  "license": "MIT",
  "scripts": {
    "dev": "yarn workspace @ethereum-starter/frontend dev",
    "lint": "yarn workspaces run lint"
  },
  "devDependencies": {
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint"
    ]
  }
}
